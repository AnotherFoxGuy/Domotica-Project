<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HelloApp"
             x:Class="HelloApp.MainPage">

    <StackLayout Margin="16" VerticalOptions="Center">
        <Label Text="Ip adress"/>
        <Entry x:Name="ipfield"/>

        <Label Text="Toggle Lamps:"/>
        <StackLayout Orientation="Horizontal">
            <StackLayout Orientation="Vertical" VerticalOptions="Center">
                <Label Text="Switch 1" FontSize="Large"/>
                <Label Text="Switch 2" FontSize="Large"/>
                <Label Text="Switch 3" FontSize="Large"/>
            </StackLayout>
            <StackLayout Orientation="Vertical" VerticalOptions="Center">
                <Switch x:Name="Switch1" Toggled="Switch1_Toggled"/>
                <Switch x:Name="Switch2" Toggled="Switch2_Toggled"/>
                <Switch x:Name="Switch3" Toggled="Switch3_Toggled"/>
            </StackLayout>
        </StackLayout>
        <StackLayout Orientation="Vertical">
            <Label x:Name="temp"/>
            <Label x:Name="humid"/>
            <Label x:Name="potmeter"/>
        </StackLayout>

        <Slider x:Name="interval" Maximum="60" Minimum="1" MaximumTrackColor="Black" MinimumTrackColor="OrangeRed" ThumbColor="HotPink"/>
    </StackLayout>

</ContentPage>
