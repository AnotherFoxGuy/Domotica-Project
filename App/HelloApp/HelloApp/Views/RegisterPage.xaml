<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloApp.Views.RegisterPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="32">
            <Label Text="New username:"/>
            <Entry x:Name="Username" Placeholder="Enter a username"/>
            <Label Text="New password:"/>
            <Entry x:Name="Password" Placeholder="Enter a password" IsPassword="True"/>
            <Label Text="Repeat password:"/>
            <Entry x:Name="RepeatPassword" Placeholder="Reapeat entered password" IsPassword="true"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button Text="Create account" Clicked="Create_Clicked"/>
                <Button Text="Cancel" Clicked="Cancel_Clicked"/>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>