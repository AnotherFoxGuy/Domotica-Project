<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloApp.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="32">
            <Label Text="Username:"/>
            <Entry x:Name="Username" Placeholder="Enter your username"/>
            <Label Text="Password:"/>
            <Entry x:Name="Password" Placeholder="Enter your password" IsPassword="True"/>
            <Button Text="Login" Clicked="Login_Clicked" HorizontalOptions="Center"/>
            <Label x:Name="NoAccountLabel" Text="No account yet? Click here" HorizontalOptions="Center" TextColor="Indigo"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>